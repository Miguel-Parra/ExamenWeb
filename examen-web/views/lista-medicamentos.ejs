<% const existeMensaje = typeof mensaje !== "undefined"%>

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<% if (existeMensaje){%>
<p>MENSAJE: <%=mensaje%></p>
<%}%>

<h1>Lista de medicamentos</h1>

<form action="/medicamento/medicamento" method="get">

    <label for="busqueda">Búsqueda</label>
    <input id="busqueda" type="text" name="busqueda">

    <button>Buscar</button>
</form>

<a href="/medicamento/crear-Medicamento">
    <button>Ingresar un nuevo medicamento</button>
</a>


<table>
    <!-- tr -> table row -->
    <tr>
        <!-- th -> table header -->
        <th>Gramos a ingerir</th>
        <th>Nombre del medicamento</th>
        <th>Composición</th>
        <th>Usado para</th>
        <th>Fecha de caducidad</th>
        <th>Número de pastillas</th>
    </tr>
    <!-- tr -> table row -->
    <% arregloMedicamentos.forEach( (medicamentos)=> { %>
        <tr>
            <!-- td -> table detail -->
            <td><%= medicamentos.gramosAIngerir %></td>
            <td><%= medicamentos.nombreMedicamento %></td>
            <td><%= medicamentos.composicion %></td>
            <td><%= medicamentos.usadoPara %></td>
            <td><%= medicamentos.fechaCaducidad %></td>
            <td><%= medicamentos.numeroPastillas %></td>
            <td>
                <form action="/medicamento/borrar/<%= medicamentos.id %>" method="POST">
                    <button type="submit"> Eliminar</button>
                </form>
                <a href="/medicamento/actualizar-Medicamento/<%= medicamentos.id %>">
                    <button>Actualizar</button>
                </a>
            </td>
        </tr>
    <% }) %>
</table>