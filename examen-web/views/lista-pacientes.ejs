<% const existeMensaje = typeof mensaje !== "undefined"%>
<%- include('header'); %>

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<% if (existeMensaje){%>
<p>MENSAJE: <%=mensaje%></p>
<%}%>

<div class="container">
    <h1 align="center">Lista de pacientes</h1>

    <form action="/paciente/paciente" method="get">

        <label for="busqueda">Búsqueda paciente</label>
        <input id="busqueda" type="text" name="busqueda">

        <button>Buscar</button>
    </form>

    <a href="/paciente/crear-Paciente">
        <button>Ingresar un nuevo paciente</button>
    </a>


    <table>
        <!-- tr -> table row -->
        <tr>
            <!-- th -> table header -->
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Fecha de Nacimiento</th>
            <th>Número de hijos</th>
            <th>Tiene seguro?</th>
        </tr>
        <!-- tr -> table row -->
        <% arregloPaciente.forEach( (paciente)=> { %>
            <tr>
                <!-- td -> table detail -->
                <td><%= paciente.nombres %></td>
                <td><%= paciente.apellidos %></td>
                <td><%= paciente.fechaNacimiento %></td>
                <td><%= paciente.hijos %></td>
                <td><%= paciente.tieneSeguro %></td>
                <td>
                    <form action="/paciente/borrar/<%= paciente.id %>" method="POST">
                        <button type="submit"> Eliminar</button>
                    </form>
                    <a href="/paciente/actualizar-Paciente/<%= paciente.id %>">
                        <button>Actualizar</button>
                    </a>
                    <br>
                    <br>

                    <a href="/medicamento/inicio/<%= paciente.id %>">
                        <button>Ver Medicamentos </button>
                    </a>

                </td>
            </tr>
        <% }) %>
    </table>

</div>

<br>
<br>

<div class="container">

    <h1 align="center">Lista de eventos</h1>

    <a href="/evento/crear-evento">
        <button>Ingresar un nuevo evento</button>
    </a>


    <table >
        <!-- tr -> table row -->
        <tr>
            <!-- th -> table header -->
            <th>Nombre del evento</th>
            <th>Fecha</th>
            <th>Latitud</th>
            <th>Longitud</th>
            <th>Acciones</th>
        </tr>
        <!-- tr -> table row -->
        <% arregloEvento.forEach( (evento)=> { %>
            <tr>
                <!-- td -> table detail -->
                <td><%= evento.nombreEvento%></td>
                <td><%= evento.fechaEvento%></td>
                <td><%= evento.longitud %></td>
                <td><%= evento.latitud %></td>
                <td>
                    <a href="/evento/actualizar-evento/<%= evento.id %>">
                        <button>Actualizar</button>
                    </a>
                    <br>
                    <br>

                    <a href="/evento/eliminar-evento/<%= evento.id %>">
                        <button>Eliminar </button>
                    </a>

                </td>
            </tr>
        <% }) %>
    </table>


</div>


<%- include('librerias')%>